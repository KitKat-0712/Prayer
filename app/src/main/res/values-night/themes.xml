<resources>
    <style name="Theme.Prayer" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:fontFamily">@font/productsans_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor_daynight</item>
        <item name="android:listDivider">@color/black</item>
        <item name="android:buttonTint">@color/pink</item>
    </style>

    <style name="border">
        <item name="android:background">@drawable/border_daynight</item>
    </style>

    <style name="View">
        <item name="android:background">@color/pink</item>
    </style>

    <style name="EditText">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/pink</item>
    </style>

    <style name="dnd">
        <item name="android:src">@drawable/dnd_daynight</item>
    </style>

    <style name="bookmark">
        <item name="android:src">@drawable/bookmark_daynight</item>
    </style>

    <style name="bookmarks_library">
        <item name="android:src">@drawable/bookmarks_library_daynight</item>
        <item name="backgroundTint">@color/pink</item>
    </style>

    <style name="history">
        <item name="android:src">@drawable/history_daynight</item>
        <item name="backgroundTint">@color/pink</item>
    </style>

    <style name="copy">
        <item name="android:src">@drawable/copy_daynight</item>
        <item name="backgroundTint">@color/pink</item>
    </style>

    <style name="settings">
        <item name="android:src">@drawable/settings_daynight</item>
        <item name="backgroundTint">@color/pink</item>
    </style>
</resources>