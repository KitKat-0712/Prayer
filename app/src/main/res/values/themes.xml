<resources>
    <style name="Theme.Prayer" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:fontFamily">@font/productsans_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:imeOptions">flagNoPersonalizedLearning</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/cursor_light</item>
        <item name="android:listDivider">@color/white</item>
        <item name="android:buttonTint">@color/blue</item>
    </style>

    <style name="border">>
        <item name="android:background">@drawable/border_light</item>
    </style>

    <style name="View">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="EditText">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/blue</item>
    </style>

    <style name="dnd">
        <item name="android:src">@drawable/dnd_light</item>
    </style>

    <style name="bookmark">
        <item name="android:src">@drawable/bookmark_light</item>
    </style>

    <style name="bookmarks_library">
        <item name="android:src">@drawable/bookmarks_library_light</item>
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="history">
        <item name="android:src">@drawable/history_light</item>
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="copy">
        <item name="android:src">@drawable/copy_light</item>
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="settings">
        <item name="android:src">@drawable/settings_light</item>
        <item name="backgroundTint">@color/blue</item>
    </style>
</resources>